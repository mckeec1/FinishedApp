<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.travelbudget.travelbudget" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="com.google.android.providers.gsf.permission.READ_GSERVICES" />
    <!--
 The ACCESS_COARSE/FINE_LOCATION permissions are not required to use
         Google Maps Android API v2, but are recommended.
    -->
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".homeScreen"
            android:configChanges="orientation"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".optionsScreen1"
            android:configChanges="orientation"
            android:label="@string/title_activity_options_screen1"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".mpgMenu"
            android:configChanges="orientation"
            android:label="@string/title_activity_mpg_menu"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".people"
            android:configChanges="orientation"
            android:label="@string/title_activity_people"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".food"
            android:configChanges="orientation"
            android:label="@string/title_activity_food"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".hotel"
            android:configChanges="orientation"
            android:label="@string/title_activity_hotel"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".taxes"
            android:configChanges="orientation"
            android:label="@string/title_activity_taxes"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".compiler"
            android:configChanges="orientation"
            android:label="@string/title_activity_compiler"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".progressScreen"
            android:configChanges="orientation"
            android:label="@string/title_activity_progress_screen"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".finalPage"
            android:configChanges="orientation"
            android:label="@string/title_activity_final_page"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".addition"
            android:configChanges="orientation"
            android:label="@string/title_activity_addition"
            android:screenOrientation="portrait" >
        </activity>

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />
        <meta-data
            android:name="com.google.android.maps.v2.API_KEY"
            android:value="@string/google_maps_key" />

        <activity
            android:name=".MapsActivity"
            android:label="@string/title_activity_maps" >
        </activity>
        <activity android:name="org.achartengine.GraphicalActivity">
        </activity>

    </application>

</manifest>
